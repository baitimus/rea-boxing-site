{
  "name": "rea-boxing-site",
  "version": "1.0.0",
  "description": "REA Boxing Site - Full Stack Application",
  "scripts": {
    "install:all": "cd src/backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd src/backend && npm run dev",
    "dev:frontend": "cd src/frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "cd src/backend && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "start:backend": "cd src/backend && npm start",
    "start:frontend": "cd src/frontend && npm start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
